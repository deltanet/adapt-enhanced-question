{{! make the _globals object in course.json available to this template}}
{{import_globals}}

{{#if image}}
<div class="enhancedQuestion__popup-image">
	<img src="{{image}}" {{#if alt}}aria-label="{{alt}}"{{else}}aria-hidden="true"{{/if}}/>
</div>
{{/if}}

{{#if feedbackTitle}}
<div class="notify__title" id="notify-heading">
	<div class="notify__title-inner" {{{a11y_attrs_heading 'notify'}}}>
		{{{compile feedbackTitle}}}
	</div>
</div>
{{/if}}

{{#if feedbackMessage}}
<div class="notify__body">
	<div class="notify__body-inner">
		{{{compile feedbackMessage}}}
	</div>
</div>
{{/if}}

<div class="notify__btn-container">
	<button class="btn-text notify__btn js-enhancedQuestion-close-btn-click" aria-label="{{#if _enhancedQuestion.close}}{{_enhancedQuestion.close}}{{else}}{{_globals._accessibility._ariaLabels.closePopup}}{{/if}}">
		{{#if _enhancedQuestion.close}}{{{_enhancedQuestion.close}}}{{else}}{{{_globals._accessibility._ariaLabels.closePopup}}}{{/if}}
  </button>
</div>

{{a11y_wrap_focus}}
